<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_main_default"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:id="@+id/tv_main_timer"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/btn_main_start"
            android:onClick="startTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_main_start" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_timer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/btn_main_stop"
            android:onClick="stopTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_main_stop" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_start"
            app:layout_constraintStart_toStartOf="@+id/btn_main_start"
    />
    <Button
            android:text="@string/btn_main_reset"
            android:onClick="resetTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_main_reset" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_stop"
            app:layout_constraintStart_toStartOf="@+id/btn_main_start"
    />

</android.support.constraint.ConstraintLayout>